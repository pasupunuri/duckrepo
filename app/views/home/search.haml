%br
.row
  .col-md-3.col-md-offset-4
    %form{action: '/', method: 'get'}
      .input-group
        %input.form-control{name: "query", placeholder: "Search for...", type: "text", value: params[:query]}
          %span.input-group-btn
            %input.btn.btn-default{type: "submit", value: 'Search'}

%br
- @result.each do |res|
  %br
  .row
    .col-md-5.col-md-offset-3
      %a{href: res[:url]} #{raw res[:title]}
      %div
        = raw res[:snippet]

%br        
.row
  .col-md-5.col-md-offset-3
    - if params[:page].to_i > 0
      %a{href: root_path(query: params[:query], page: params[:page].to_i - 1)} Previous
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    - if @result.present?
      %a{href: root_path(query: params[:query], page: params[:page].to_i + 1)} Next
    
%br
%br
%br
